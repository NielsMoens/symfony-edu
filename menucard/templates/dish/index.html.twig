{% extends 'base.html.twig' %}

{% block body %}
<h2>Edit dishes</h2><br>
<table class="table table-striped">
    <thead>
    <tr>
        <td>Order Number.</td>
        <td>Name</td>
        <td>Description</td>
    </tr>
    </thead>
    <tbody>
    {% for dish in dishes %}
        <tr>
            <td>{{ dish.id }}</td>
            <td>{{ dish.name }}</td>
            <td>{{ dish.description }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
